                            {% if not is_granted('ROLE_MEMBER') %} unusable {% endif %}" {% if is_granted('ROLE_MEMBER') %} id="action_favorite" {% endif %}
                           href="javascript:;" data-entity="job"
                           data-action="{% if isFav %}remove{% else %}add{% endif %}" data-entity="job"

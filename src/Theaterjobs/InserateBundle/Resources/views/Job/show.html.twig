                        </a>
                    {% endif %}
                    <a class="icon pull-right icon-pdf-job " data-toggle="tooltip" data-placement="bottom"
                       title="{{ 'job.show.tooltip.getPdf'|trans }}"
                       href="{{ path('tj_inserate_job_route_pdf', { 'slug': job.slug }) }}">

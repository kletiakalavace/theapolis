                            <use xlink:href="{{ asset('bundles/theaterjobsmain/img/icon-sprite.svg#icon-pdf') }}">gfg
                            </use>
                        </svg>
                    </a>
                    {% if job.status == 1 or is_granted('ROLE_ADMIN') %}

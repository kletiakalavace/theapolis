{% import 'macro.html.twig' as m %}
<div class="modal-body movebottom" id="general">
    <!-- Skills -->
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-push-2">
                <h2>{{ 'news.comment.title.allComments'|trans }}</h2>
                {% block content %}
                    {% if comments|length > 0 %}
                        {% for comment in comments %}
                            <div class="row row-comments">
                                <div class="col-md-2 col-xs-2">
                                    <div class="circle-img-comment">
                                        {% set profilePhoto =  profile_photo(comment.profile,'uploadFile','logos') %}
                                        {% set filter = '' %}

                                        {% if comment.profile.mediaImage|first.filter is defined %}
                                            {% set filter = comment.profile.mediaImage|first.filter %}
                                        {% endif %}

                                        <figure class="{{ filter }}">
                                            <img src="{{ profilePhoto }}">
                                        </figure>
                                    </div>
                                </div>
                                <div class="col-md-10 col-xs-10 padding-mobile-left">
                                    <h4>
                                        <a href="{{ path('tj_profile_profile_show',{'slug':comment.profile.slug}) }}">
                                            {{ comment.profile | defaultName }}
                                        </a>
                                    </h4>
                                    <p>{{ comment.comment }}</p>
                                    <span class="dt-news-comment">{{ comment.date|date('d.m.Y') }}</span>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                {% endblock %}
            </div>
        </div>
    </div>
</div>
